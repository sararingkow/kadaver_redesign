---
// Import your case data (can be from a JSON file or a JS module)
import cases from "../data/cases.json";

const { slug } = Astro.params;

// Find the case that matches the slug
const caseData = cases.find((c) => c.slug === slug);

if (!caseData) {
  throw new Error(`Case not found: ${slug}`);
}
---

<!-- Single View Layout -->
<section class="max-w-7xl mx-auto px-8 py-16">
  <h1 class="text-3xl font-bold">{caseData.title}</h1>
  <p class="text-gray-600">{caseData.subtitle}</p>

  <img src={caseData.image} alt={caseData.title} class="w-full h-[400px] object-cover my-8" />

  <div class="text-lg text-gray-800">
    {caseData.description}
  </div>

  <a href="/cases" class="mt-6 inline-block text-blue-600 hover:underline"> ‚Üê Tilbage til Cases </a>
</section>
