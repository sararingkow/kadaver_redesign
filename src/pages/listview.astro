---
import MainLayout from "../layouts/MainLayout.astro";
import Cards from "../components/Cards.astro";
---

<MainLayout title="Kadaver | Cases" description="Kadaver - cases" ogtitle="Kadaver - case-side" ogdescription="Kadaver's case-side">
  <section class="top-section mt-20 md:mt-24 max-w-7xl mx-auto md:px-0 px-8 z-20 grid grid-cols-12">
    <div class="col-span-12">
      <h1 class="display md:mt-24 mt-16 mb-4">Cases</h1>
      <hr class="border-blue-700 border-4 w-[190px] md:w-[320px]" />
    </div>
  </section>

  <section class="case_list mt-20 md:mt-24 pb-16 max-w-7xl mx-auto md:px-0 px-8 grid grid-cols-12 gap-6 md:gap-16 items-center justify-center">
    <div class="col-span-12 grid grid-cols-1 md:grid-cols-3 gap-gap">
      <Cards />
    </div>
  </section>
</MainLayout>

<script>
  import { inView } from "motion";

  /* inView Animations */
  const elementmedanimation1 = document.querySelector("h1");
  inView(elementmedanimation1, () => {
    elementmedanimation1.classList.add("animate__animated", "animate__fadeInLeft");
  });

  const elementmedanimation2 = document.querySelector("hr");
  inView(elementmedanimation2, () => {
    elementmedanimation2.classList.add("animate__animated", "animate__fadeInLeft");
  });
</script>
