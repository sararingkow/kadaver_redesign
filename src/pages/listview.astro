---
import MainLayout from "../layouts/MainLayout.astro";
import Cards from "../components/Cards.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Kadaver | Cases" description="Kadaver - cases" ogtitle="Kadaver - case-side" ogdescription="Kadaver's case-side">
  <section class="top-section relative md:mb-desktop-bottom mb-mobil-bottom w-full h-screen">
    <!-- Video Background -->
    <div class="absolute inset-0 w-full h-full z-0">
      <img src="/images/cases.webp" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gray-950 opacity-80 z-[10]"></div>
    </div>

    <!-- Text Overlay -->
    <div class="absolute inset-0 max-w-7xl mx-auto md:px-0 px-8 z-20 grid grid-cols-12 content-center h-full">
      <div class="md:col-span-8 col-span-12 text-left flex flex-col justify-center items-start z-30">
        <h1 class="display mb-4 text-gray-50">Cases</h1>
        <hr class="border-blue-700 border-4 w-[190px] md:w-[320px] md:mb-8 mb-10" />

        <p class="hero_text text-gray-50">
          Vi tror på, at de bedste kampagner ikke bare ses&mdash; de mærkes. Gennem strategi, kreativitet og tæt samarbejde udvikler vi oplevelser,
          der gør en reel forskel. Se vores cases, og oplev, hvordan vi bringer brands til live med idéer, der både inspirerer og leverer resultater.
        </p>
      </div>
    </div>
    <div class="absolute bottom-[3%] md:bottom-[2.5%] w-full flex justify-center z-[30]">
      <a href="#case-list">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="float w-8 h-8 sm:w-10 sm:h-10 text-gray-50 hover:text-violet-600 transition duration-300 ease-in-out"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5"></path>
        </svg>
      </a>
    </div>
  </section>

  <section
    id="case-list"
    class="case_list md:mt-desktop-top mt-mobil-top md:mb-desktop-bottom mb-mobil-bottom max-w-7xl mx-auto md:px-0 px-8 grid grid-cols-12 gap-6 md:gap-16 items-center justify-center"
  >
    <div class="col-span-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-gap">
      <Cards />
    </div>
  </section>
</MainLayout>

<script>
  import { inView } from "motion";

  /* inView Animations */
  const elementmedanimation1 = document.querySelector("h1");
  inView(elementmedanimation1, () => {
    elementmedanimation1.classList.add("animate__animated", "animate__fadeInLeft");
  });

  const elementmedanimation2 = document.querySelector("hr");
  inView(elementmedanimation2, () => {
    elementmedanimation2.classList.add("animate__animated", "animate__fadeInRight");
  });

  const elementmedanimation3 = document.querySelector(".hero_text");
  inView(elementmedanimation3, () => {
    elementmedanimation3.classList.add("animate__animated", "animate__fadeInRight");
  });
</script>

<style>
  @keyframes float {
    0% {
      transform: translatey(0);
    }
    50% {
      transform: translatey(-10px);
    }
    100% {
      transform: translatey(0);
    }
  }
  .float {
    animation: float 3s ease-in-out infinite;
  }

  .top-section p,
  .top-section h1 {
    text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
  }
</style>
