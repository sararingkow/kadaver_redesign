---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---

<MainLayout title="Kadaver | Hjem" description="Kadaver's forside" ogtitle="Kadaver - forside" ogdescription="Kadaver's forside/startside">
  <section class="relative top-section md:pt-desktop-top md:pb-desktop-bottom pt-mobile-top pb-mobile-bottom w-screen h-screen">
    <div class="absolute inset-0 w-full h-full z-0">
      <img src="/images/hero_gif.gif" alt="background gif" class="w-full h-full object-cover" />
      <!-- Overlay -->
      <div class="absolute inset-0 bg-gray-950 opacity-75 z-[10]"></div>

      <!-- Highlight Box 1 -->
      <div class="absolute bg-violet-600 w-[35rem] h-[8rem] left-[23.5%] -translate-x-1/2 top-[31%] z-10 transition-transform duration-500 scale-110">
      </div>

      <h1 class="display uppercase pb-20 text-gray-50 col-span-12 relative z-[20] animate-fadeIn">Kadaver</h1>

      <!-- Highlight Box 2 -->
      <div class="absolute bg-blue-700 w-[60rem] h-[10rem] left-[38%] -translate-x-1/2 top-[50%] z-[20] transition-transform duration-500 scale-110">
      </div>

      <h2 class="uppercase text-gray-50 col-span-8 lg:col-span-11 text-3xl font-bold relative z-[20] animate-fadeIn">
        Kreativ kommunikation, der skaber stærke relationer
      </h2>
    </div>

    <div class="absolute inset-0 max-w-7xl mx-auto md:px-0 px-8 z-20 grid grid-cols-12 content-center">
      <h1 class="display uppercase pb-20 text-gray-50 col-span-12">Kadaver</h1>
      <h2 class="uppercase text-gray-50 col-span-8 lg:col-span-11 text-3xl font-bold">Kreativ kommunikation, der skaber stærke relationer</h2>
    </div>
  </section>
</MainLayout>
