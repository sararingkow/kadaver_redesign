---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollToTop from "../components/ScrollToTop.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <meta property="og:locale" content="da_DK" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={Astro.props.ogtitle} />
    <meta property="og:description" content={Astro.props.ogdescription} />
    <title>{Astro.props.title}</title>
  </head>
  <body>
    <header>
      <Header />
    </header>

    <main class="bg-gray-50 overflow-hidden">
      <slot />
    </main>

    <footer class="">
      <Footer />
      <ScrollToTop />
    </footer>
  </body>
</html>

<style>
  @font-face {
    font-family: "Gilroy-regular";
    src:
      url("/fonts/gilroy_font/gilroy-regular-webfont.woff2") format("woff2"),
      url("/fonts/gilroy_font/gilroy-regular-webfont.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Gilroy-display";
    src:
      url("/fonts/gilroy_font/gilroy-blackitalic-webfont.woff2") format("woff2"),
      url("/fonts/gilroy_font/gilroy-blackitalic-webfont.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
