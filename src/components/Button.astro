---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "px-8 p-[15px] transition duration-300 ease-in-out uppercase shadow-drop25";

const variantClasses = {
  primary: "bg-gray-950 hover:bg-gray-700 text-gray-50",
  secondary: "bg-gray-800 hover:bg-gray-500 text-gray-50",
};

const sizeClasses = {
  large: "text-3xl bold",
  medium: "text-2xl bold",
  small: "text-lg bold",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
