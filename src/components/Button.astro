---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "px-8 p-[15px] transition duration-300 ease-in-out uppercase";

const variantClasses = {
  primary: "bg-gray-900 hover:bg-gray-700 text-gray-50",
  secondary: "bg-gray-700 hover:bg-gray-500 text-gray-50",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
